#!/bin/sh

# rofi power menu 
#
OPT=$(echo -e "ï€£ lockscreen\nï‹¶ logout\nï¦± suspend\nïŸ‰ hibernate\nï€¡ reboot\nï€‘ poweroff" | rofi -dmenu -i -l 7 )
#OPT=$(echo -e "lockscreen\nlogout\nsuspend\nhibernate\nreboot\npoweroff" | rofi -dmenu -i )

# systemd
case $OPT in
	"ï€£ lockscreen") notify-send "ðŸ‘‰ Locking the screen ï€£" && sleep 1 && loginctl lock-session ${XDG_SESSION_ID-};;
	"ï‹¶ logout") notify-send "ðŸ‘‰ Loging out ï‹¶" && sleep 1 && loginctl terminate-session ${XDG_SESSION_ID-};;
	"ï¦± suspend") notify-send "ðŸ‘‰ Suspending ï¦±" && sleep 1 && systemctl suspend   ;;
	"ïŸ‰ hibernate") notify-send "ðŸ‘‰ Hibernateing ïŸ‰" && sleep 1 && systemctl hibernate ;;
	"ï€¡ reboot") notify-send "ðŸ‘‰ Rebooting ï€¡" && sleep 1 && reboot ;;
	"ï€‘ poweroff") notify-send "ðŸ‘‰ Powering Off ï€‘" && sleep 1 && poweroff ;;
	*) ;;
esac

